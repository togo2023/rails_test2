<div class="devise-wrapper">
  <div class="devise-container">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "メールアドレス",class: "devise-label-name"  %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレスを入力",class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード",class: "devise-label-name"  %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力",class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持",class: "devise-label-name"  %>
    </div>
    <% end %>

    <div class="actions d-grid gap-2">
      <%= f.submit "ログイン",class: "btn btn-primary" %>
    </div>

    <div class="d-grid gap-2">
      <%= link_to "新しいアカウントを作成", new_registration_path(resource_name),class: "btn btn-outline-dark devise-btn" %>
    </div>
    <% end %>
  </div>
</div>