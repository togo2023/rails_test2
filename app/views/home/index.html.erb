<div class="backimage">
  <h1>Potepan Shareで<br>まだ体験したことのない<br>旅をしよう</h1>

  <%= form_with url: search_rooms_path, method: :get,class: "home-firm-container" do |f| %>
  <%= f.text_field :erea, placeholder: "エリア名を入力",class: "form-control" %>
  <%= f.submit "検索", class: "btn btn-primary btn-lg" %>
  <% end %>
</div>

