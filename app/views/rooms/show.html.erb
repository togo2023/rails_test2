<%= link_to "← 戻る", :back %>
<% if user_signed_in? && @room.user_id == current_user.id %>
  <%= link_to "編集", edit_room_path(@room.id) %>
<% end %>

<% if @room.image_room.attached? %>
  <%= image_tag(rails_blob_path(@room.image_room), size: "50x50",  alt: "ルーム画像") %>
<% else %>
  <%= image_tag("default_room.png", size: "50x50",  alt: "ルーム画像") %>
<% end %>

<%= @room.room_name %>
<%= "¥#{@room.money}~" %>
<%= @room.address %>
<%= @room.room_introduction %>

<%= form_with model: @reservation, method: :get, url: confirm_reservations_path do |f| %>
  <%= f.label :check_in, "チャックイン" %>
  <%= f.date_field :check_in %>

  <%= f.label :check_out, "チェックアウト" %>
  <%= f.date_field :check_out %>

  <%= f.label :people, "人数" %>
  <%= f.text_field :people, placeholder: "0" %>

  <% if user_signed_in? && @room.user_id == current_user.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <%= f.hidden_field :room_id, value: @room.id %>

  <%= f.submit "予約する" %>
<% end %>

 
