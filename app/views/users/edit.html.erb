<h1>設定</h1>
<%= link_to "アカウント", root_path %>
<%= link_to "プロフィール", user_path %>
<h1>プロフィール</h1>

<%= form_with model: @user do |f| %>
  <div><%= f.label :image_user, "アイコン画像" %></div>
  <% if @user.image_user.attached? %>
    <p><%= image_tag(rails_blob_path(@user.image_user),:size => "50x50") %></p>
  <% else %>
    <p><%= image_tag("default_user.png", :size => "50x50") %></p>
  <% end %>
  <%= f.file_field :image_user, placeholder: "画像アップロード" %>
  <div><%= f.label :name, "名前" %></div>
  <div><%= f.text_field :name %></div>
  <div><%= f.label :introduction, "自己紹介" %></div>
  <div><%= f.text_area :introduction %></div>

  <p><%= f.submit "保存" %></p>
  <%= link_to "戻る", :back %>
<% end %>



